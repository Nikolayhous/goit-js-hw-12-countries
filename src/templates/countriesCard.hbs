{{#each this}}
  <li class='item-card--country'>
    <h1 class='country__title'>{{name}}</h1>
    <div class='country__body'>
      <div class='country__info'>
        <p class="country__parameter">
          <span class='country__text'>Capital:</span>
          {{capital}}
        </p>
        <p class="country__parameter">
          <span class='country__text'>Population:</span>
          {{population}}
        </p>
        <ul class='country__list'>
          {{#each languages}}
            <li>
              <p class="country__parameter"> 
              <span
                class='country__text'>Languages:</span>
              {{this.name}}
              </p>
            </li>
          {{/each}}
        </ul>
      </div>
      <div class='country__image--flag'>
        <img class='country__img' width='150' src='{{flag}}' alt='flag' />
      </div>
    </div>

  </li>
{{/each}}